<Application x:Class="WpfStopWatch.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="StopWatch.xaml">
    <Application.Resources>
        <LinearGradientBrush x:Key="ClientBackgroundBrush" StartPoint="0,0" EndPoint="1,1" >
            <GradientStop Offset="0" Color="AliceBlue" />
            <GradientStop Offset="0.7" Color="SteelBlue" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ButtonBackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,1" >
            <GradientStop Offset="0" Color="SteelBlue" />
            <GradientStop Offset="0.7" Color="DarkBlue" />
            <GradientStop Offset="1" Color="SteelBlue" />
        </LinearGradientBrush>

        <SolidColorBrush x:Key="BorderBrush" Color="DarkBlue" />
        <SolidColorBrush x:Key="HeaderBrush" Color="#F1D678" />
        <SolidColorBrush x:Key="ForegroundBrush" Color="#0D5F86" />

        <LinearGradientBrush x:Key="ClientBrush" StartPoint="0,0" EndPoint="1,1" >
            <GradientStop Offset="0" Color="AliceBlue" />
            <GradientStop Offset="0.7" Color="SteelBlue" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="HeaderButtonBrush" StartPoint="0,0" EndPoint="1,1" >
            <GradientStop Offset="0" Color="White" />
            <GradientStop Offset="0.5" Color="Red" />
        </LinearGradientBrush>
    </Application.Resources>
</Application>
